@{
    ViewBag.Title = "Pagos";
}

<h2>Pagos</h2>

<div class="row">
    <div class="col-md-6">
        <form id="form-pago">
            <div class="mb-3">
                <label for="idFacturaPago" class="form-label">ID Factura</label>
                <input type="number" class="form-control" id="idFacturaPago" min="1" required />
            </div>
            <div class="mb-3">
                <label for="montoPagado" class="form-label">Monto pagado</label>
                <input type="number" step="0.01" class="form-control" id="montoPagado" min="0" required />
            </div>
            <button type="submit" class="btn btn-primary">Registrar pago</button>
        </form>

        <div id="mensaje-pago" class="mt-3 d-none"></div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            $("#form-pago").on("submit", function (e) {
                e.preventDefault();

                var datos = {
                    idFactura: parseInt($("#idFacturaPago").val(), 10),
                    montoPagado: parseFloat($("#montoPagado").val())
                };

                $("#mensaje-pago").removeClass("alert alert-success alert-danger").addClass("d-none");

                $.ajax({
                    url: '@Url.Content("~/api/pagos")',
                    method: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(datos),
                    success: function (respuesta) {
                        $("#mensaje-pago")
                            .removeClass("d-none")
                            .addClass("alert alert-success")
                            .text("Pago registrado. ID: " + respuesta.idPago);

                        $("#form-pago")[0].reset();
                    },
                    error: function (xhr) {
                        var mensaje = 'Error al registrar el pago.';
                        if (xhr.responseJSON && xhr.responseJSON.Message) {
                            mensaje = xhr.responseJSON.Message;
                        }

                        $("#mensaje-pago")
                            .removeClass("d-none")
                            .addClass("alert alert-danger")
                            .text(mensaje);
                    }
                });
            });
        });
    </script>
}
